@page "/kalkulacka2"

<PageTitle>Kalkulačka 2 - Short</PageTitle>

<h1>Základní matematické operace</h1>
<hr />
<label>Číslo 1: <input @bind-value="cislo1" /></label>
<br />
<label>Číslo 2: <input @bind-value="cislo2" /></label>
<br />
<div class="m-3">
    <button @onclick="Soucet" class="btn">Součet (+)</button>
    <button @onclick="Rozdil" class="btn btn-primary">Rozdíl (-)</button>
    <button @onclick="Soucin" class="btn btn-secondary">Součin (*)</button>
    <button @onclick="Podil" class="btn btn-success">Podíl (/)</button>
</div>
<label>Výsledek: <input @bind-value="vysledek" readonly /></label>
<hr />
<label>
    <input type="checkbox" @bind-value="kontrolaPreteceni"/> 
    Kontrola přetečení
</label>

@code {
    private short cislo1;
    private short cislo2;
    private short vysledek;
    private bool kontrolaPreteceni;

    /// <summary>
    /// Tato metoda sečte dvě čísla.
    /// </summary>
    private void Soucet()
    {
        if(kontrolaPreteceni)
        {
            checked
            {
                vysledek = (short)(cislo1 + cislo2);
            }
        }
        else
        {
            vysledek = (short)(cislo1 + cislo2);
        }
    }

    /// <summary>
    /// Tato metoda odečte dvě čísla.
    /// </summary>
    private void Rozdil()
    {
        vysledek = (short)(cislo1 - cislo2);
    }

    /// <summary>
    /// Tato metoda vynásobí dvě čísla.
    /// </summary>
    private void Soucin()
    {
        vysledek = (short)(cislo1 * cislo2);
    }

    /// <summary>
    /// Tato metoda vydělí dvě čísla.
    /// </summary>
    private void Podil()
    {
        vysledek = (short)(cislo1 / cislo2);
    }
}
